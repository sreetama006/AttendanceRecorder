<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back_ground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/student_register_name"
        android:text="NAME:"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/student_name"
        android:textSize="20dp"
        android:hint="ENTER YOUR FULL NAME"
        android:textColorHint="@color/till"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:id="@+id/student_register_dept"
        android:text="DEPARTMENT:"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/student_dept"
        android:textSize="20dp"
        android:hint="ENTER DEPARTMENT"
        android:textColorHint="@color/till"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:id="@+id/student_register_year"
        android:text="YEAR:"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/student_year"
        android:textSize="20dp"
        android:hint="ENTER YEAR"
        android:textColorHint="@color/till"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <TextView
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:id="@+id/student_create_email"
        android:text="CREATE EMAIL:"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/student_email"
        android:textSize="20dp"
        android:textColorHint="@color/till"
        android:hint="ENTER DERIRED EMAIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:id="@+id/student_CREATE_PASSWORD"
        android:text="CREATE PASSWORD:"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/student_pass"
        android:textSize="20dp"
        android:textColorHint="@color/till"
        android:hint="ENTER DESIRED PASSWORD"
        android:layout_width="match_parent"

        android:layout_height="wrap_content" />
    <Button
        android:background="#FFFFFF"
        android:id="@+id/student_register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        android:layout_margin="30sp"
        android:text="REGISTER"
        android:textSize="30dp" />


</LinearLayout>